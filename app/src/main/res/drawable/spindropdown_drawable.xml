<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#D9D0F3" />
            <stroke android:width="1dp" />
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:height="2dp" android:gravity="bottom" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomRightRadius="3dp" android:bottomLeftRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
        </shape>
    </item>
</layer-list>